// sum of two numbers
sum(displayPage, 2,3)
function sum(callback,x,y) {
    let result = x+y;
callback(result);
    
}
function displayConsole(result) {
    console.log(result);
}
function displayPage(result) {
    document.getElementById("myh1").textContent = result;
}
